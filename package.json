{
  "name": "easyui-jsx",
  "author": "James Smith",
  "version": "0.0.4",
  "license": "MIT",
  "homepage": "https://github.com/djalbat/EasyUI-JSX",
  "description": "JSX support for EasyUI.",
  "repository": {
    "type": "git",
    "url": "https://github.com/djalbat/EasyUI-JSX"
  },
  "dependencies": {},
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.7.5",
    "babel-plugin-transform-react-jsx": "^6.7.5",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "browserify": "^13.0.0",
    "chokidar-cli": "^1.2.0",
    "easyui": "^6.0.8"
  },
  "scripts": {
    "clean": "rm -rf ./lib",
    "babel": "babel ./es6 --presets=es2015,react --plugins transform-react-jsx --out-dir=./lib",
    "babel-debug": "babel ./es6 --presets=es2015,react --plugins transform-react-jsx --source-maps inline --out-dir=./lib",
    "browserify:example": "browserify ./example/index.js --standalone example > ./example.js",
    "browserify:example-debug": "browserify ./example/index.js --standalone example --debug > ./example.js",
    "build": "npm run clean && npm run babel && npm run browserify:example",
    "build-debug": "npm run clean && npm run babel-debug && npm run browserify:example-debug",
    "watch": "npm run build && chokidar './index.js' './example/index.js' './es6/**/*.js' -c 'npm run build'",
    "watch-debug": "npm run build-debug && chokidar './index.js' './example/index.js' './es6/**/*.js' -c 'npm run build-debug'"
  }
}
